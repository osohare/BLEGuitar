<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BLEGuitar"
             x:Class="BLEGuitar.MainPage">
 
  <StackLayout Padding="20,20,20,20">
    <Label Text="Connect your BLE Guitar!"
             VerticalOptions="Center"
             HorizontalOptions="Center" />

    <Button x:Name="btnScan" 
            Text="Scan and Connect" 
            Clicked="btnScan_OnButtonClicked" />

    <Button x:Name="btnConnect" 
            Text="Connect to known device" 
            Clicked="btnConnect_OnButtonClicked" />
		
    <Entry x:Name="txtMacAddress" 
			Text="fdf7bc034270" />
		
	<Label x:Name="lblStatus"
          Text="Status"
          VerticalOptions="Center"
          HorizontalOptions="Center" />
  
  </StackLayout>

</ContentPage>